{
  "name": "opentower",
  "version": "0.1.0",
  "description": "SimTower recreation - HD remaster in TypeScript + PixiJS",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "simtower",
    "simulation",
    "game",
    "pixijs",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.2.4",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "pixi.js": "^8.0.0"
  }
}
